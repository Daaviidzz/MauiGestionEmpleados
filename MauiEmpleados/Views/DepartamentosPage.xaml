<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MauiEmpleados.ViewModels"
             xmlns:models="clr-namespace:MauiEmpleados.Models"
             x:Class="MauiEmpleados.Views.DepartamentosPage"
             x:DataType="viewmodels:DepartamentosViewModel"
             Title="GestiÃ³n de Departamentos"
             >
    <Grid RowDefinitions="*, Auto" Padding="20">


        <CollectionView x:Name="listaDeptos" 
                Grid.Row="0" 
                ItemsSource="{Binding Departamentos}"
                SelectionMode="Single"
                SelectionChangedCommand="{Binding IrAEmpleadosCommand}"
                SelectionChangedCommandParameter="{Binding SelectedItem, Source={x:Reference listaDeptos}}">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:Departamento">
                    <Border 
                           Margin="0,8" 
                           Padding="15" 
                           
                           >

                        <Grid ColumnDefinitions="Auto, *, Auto">


                            <Border Grid.Column="0"
                                   
                                    StrokeShape="RoundRectangle 25"
                                    HeightRequest="50"
                                    WidthRequest="50"
                                    Margin="0,0,15,0">
                                <Label Text="ðŸ¦" 
                                       FontSize="24" 
                                       HorizontalOptions="Center" 
                                       VerticalOptions="Center" />
                            </Border>

                            <VerticalStackLayout Grid.Column="1" VerticalOptions="Center">
                                <Label Text="{Binding Nombre}" 
                                       FontSize="18" 
                                       FontAttributes="Bold" 
                                       />
                                <Label Text="Departamento Activo" 
                                       FontSize="13" 
                                       />
                            </VerticalStackLayout>

                            <Label Grid.Column="2" 
                                   Text="â¯" 
                                  
                                   FontSize="18" 
                                   VerticalOptions="Center" />
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <ActivityIndicator Grid.Row="0"
                       IsRunning="{Binding Cargando}"
                       IsVisible="{Binding Cargando}"
                      
                       VerticalOptions="Center"
                       HorizontalOptions="Center"
                       WidthRequest="50"
                       HeightRequest="50" />
        <Button Grid.Row="1" 
                Text="ACTUALIZAR DATOS" 
                Command="{Binding GetDepartamentosCommand}" 
               
               
                FontAttributes="Bold"
                CornerRadius="8"
                HeightRequest="50"
                Margin="10" />
    </Grid>
</ContentPage>